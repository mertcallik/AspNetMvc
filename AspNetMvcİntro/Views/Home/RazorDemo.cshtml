    }
    catch (ArgumentNullException argumentNullException)
    {
        Console.WriteLine(argumentNullException);
        throw;
    }
    catch (Exception e)
    {
        throw;
    }
    finally
    {

    }
    @using (Html.BeginForm())
    {
        <input type="text" id="" name=""/>
        <button type="submit"></button>
    }

</body>
</html>
