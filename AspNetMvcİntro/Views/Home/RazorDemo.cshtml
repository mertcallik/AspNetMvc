    <h1>
        Table
        <a name="table"></a>
    </h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>City Id</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Employee)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirtName</td>
                    <td>@item.LastName</td>
                    <td>@item.CityId</td>
                </tr>
            }
        </tbody>
    </table>
    Mail me :mertclkreal@gmail.com

    <h1>
        Date
        <a name="date"></a>
    </h1>


    <p>@DateTime.Now</p>
    @{
        var date = DateTime.Now - TimeSpan.FromDays(3);
    }
    <p> 3 Days Ago Was @date </p>
    @{
        var number = 10;

    }
    <p>@number</p>

    <h1>
        If Else
        <a name="if"></a>
    </h1>

    @if (number < 10)
    {
        <p>Your Number is less than 10</p>
    }
    else if (number == 10)
    {
        <p>Your Number is 10</p>

    }
    else
    {
        <p>Your Number is greater than 10</p>
    }

    <h1>
        Switch
        <a name="switch"></a>
    </h1>

    @switch (number)
    {
        case 10:
            {
                <p>Your Number is 10</p>
                break;
            }
        case > 10:
            {
                <p>Your Number is greater than 10</p>
                break;
            }

        default:
            {
                <p>Your Number is smaller than 10</p>
                break;
            }
    }
    <h1>
        For
        <a name="for"></a>
    </h1>
    @for (int i = 0; i < Model.Employee.Count; i++)
    {
        <br />
        <b></b>

        @Model.Employee[i].FirtName

    }
    @{
        var counter = 0;
    }

    <h1>
        While
        <a name="while"></a>
    </h1>
    @while (counter < Model.Employee.Count)
    {
        <br />
        <b>@Model.Employee[counter].FirtName;</b>


        counter++;
    }
    <h1>
        Do While
        <a name="while"></a>
    </h1>
    @{
        var counter2 = 0;
    }
    @do
    {

        <br />

        @Model.Employee[counter2].FirtName
        ;
        counter2++;
    } while (counter2 < Model.Employee.Count);
